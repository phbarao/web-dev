<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My App</title>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        html {
            font-family: sans-serif;
        }

        body {
            color: gray;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            line-height: 1.5rem;
        }

        h1 {
            margin: 0.8rem 0 0.6rem 0;
            font-size: 1.2rem;
        }

        form {
            width: 80%;
            min-width: 30rem;
            height: 6vh;
            background-color: lightgray;
            border: 1px solid lightgray;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        input {
            width: 15rem;
            height: 2rem;
            margin-right: 1rem;
        }

        li {
            list-style: none;

        }

        .prices {
            width: 80%;
        }

        .price {
            width: 100%;
            height: 1.45rem;
            font-size: 0.8rem;
            border-top: 1px solid lightgray;
        }

    </style>
</head>
<body>
    <h1>Inserir Serviço</h1>
    <form action="/prices" method="POST">
        <input type="text" placeholder=" Serviço" name="serviceName">
        <input type="money" placeholder=" Preço" name="servicePrice">
        <button type="submit">Enviar</button>
    </form>

    <h1>Tabela de Serviços</h1>
    <ul class="prices">
        <!-- Loop through prices -->
        <% for(var i = 0; i < prices.length; i++) {%>
            <li class="price">
                <!-- Output name from the iterated price object -->
                <span><%= prices[i].serviceName %></span>:
                <!-- Output price from the iterated price object -->
                <span>R$ <%= prices[i].servicePrice %></span>
            </li>
        <% } %>
    </ul>

    <script src="/public/main.js"></script>
</body>
</html>